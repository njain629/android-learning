<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009900"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nam1102.intentapp.MainActivity"
    tools:showIn="@layout/activity_main">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">
        <TextView
            android:id="@+id/firstactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Activity"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="70dp"
            android:layout_marginTop="76dp"
            android:layout_below="@+id/firstinput"
            android:layout_alignLeft="@+id/firstbutton"
            android:layout_alignStart="@+id/firstbutton" />

        <Button
            android:id="@+id/firstbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="254dp"
            android:onClick="onclick"
            android:layout_marginTop="72dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/firstinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="250dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="154dp"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/firstbutton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="46dp"
            android:layout_marginEnd="46dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
